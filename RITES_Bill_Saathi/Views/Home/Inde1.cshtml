@model List<EmployeeDetails>


<h2>Employees List</h2>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th style="display:none;">Employee ObjectId</th> <!-- Hidden column -->
                <th>Serial Number</th>
                <th>Created Date</th>
                <th>Updated Date</th>
                <th>Employee Name</th>
                <th>Employee Bills</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td style="display:none;">@Model[i].objectId</td>
                    <td>@(i + 1)</td>
                    <td>@Model[i].createdAt.ToShortDateString()</td>
                    <td>@Model[i].updatedAt.ToShortDateString()</td>
                    <td>@Model[i].employeeId</td>
                    <td>@Model[i].employeeName</td>
                    <td>
                        <!-- Using Bootstrap button styles -->
                        <a href="@Url.Action("BillsGallery", "Home", new { employee_objectId = Model[i].objectId })" class="btn btn-info btn-sm">View @Model[i].employeeBills Bills</a>
                    </td>
                    <td>
                        <!-- Using Bootstrap button styles -->
                        <a href="@Url.Action("Summary", "Home", new { projectId = Model[i].objectId })" class="btn btn-secondary btn-sm">Generate Summary</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h2>Create New Employee</h2>
<form asp-action="CreateEmployee" method="post" class="mb-3">
    <div class="mb-3">
        <input type="text" class="form-control" name="EmployeeName" placeholder="Employee Name" required />
    </div>
    <div class="mb-3">
        <input type="text" class="form-control" name="EmployeeId" placeholder="Employee Id" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

